<div class="list-container">
  <h1> My List </h1>
  <% if @films.length != 0: %>
    <button id="edit-toggle-button">edit your list</button>
  <% end %>
  <hr />

  <ul id="list" class='sortable list'>
    <% if @films.length == 0: %>
      <div class='add-films-message'>
        <h3>
          You have no films!
          You can find new films by searching in the navbar.
        </h3>
      </div>
    <% end %>
  </ul>
</div>