    <div id="search">
    </div>
    <div id="wait">
    </div>
  </div>

  <h5 id="home" class="nav-item right home-link">
    <a href="#/" class="home">home</a>
  </h5>
  <h5 id="home" class="nav-item right bacon-number home-link">
    <a href="#/bacon_number" class="home">bacon number</a>
