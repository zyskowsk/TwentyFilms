<!DOCTYPE html>
<html>
<head>
  <title>TwentyFilms</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notices] %>
  <% flash[:notices].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<% if logged_in? %>
  <%= button_to 'logout', session_url, :method => :delete %>
<% end %>

<%= yield %>

</body>
</html>
